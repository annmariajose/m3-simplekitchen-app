extends register

block content
    -data = data || {}

    #registration-error-container
        if errors
            ul.my-errors
                for error in errors
                    li= error.msg
    #registration-container
        h3 Register to subscribe
        form(action="." method="POST" class="form-registration")
            label(for="name") Name:
            input(
                type="text"
                id="name"
                name="name"
                class="form-control"
                value=data.name
            )

            label(for="email") Email:
            input(
                type="email"
                id="email"
                name="email"
                class="form-control"
                value=data.email
            )

            input(
                type="submit" 
                value="Register"
                class="btn btn-lg btn-primary btn-block"
            )